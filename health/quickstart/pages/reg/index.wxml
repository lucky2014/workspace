<view class="banner" style="overflow:hidden; height: {{viewHeigh}}px;">
  <image src="../imgs/b1.jpg" style="width:{{viewWidth}}px; height: {{viewHeigh}}px;" bindload="imageLoad" />
</view>

<form bindsubmit="formSubmit" bindreset="formReset">
<view class="wrap">
	<picker bindchange="bindPickerChange" value="{{areaIndex}}" range="{{area}}">  
		<view class="picker">  
		  <label>公司名称</label>{{area[areaIndex]}}  
		</view>  
		<image src="../imgs/ang.png" style="width:9px; height:14px;" />
	</picker>  
	<view class="section">
	  <label>工号</label><p><input type="number" placeholder="请填写员工工号" maxlength="6" name="employeeNumber" /></p>
	</view>
	<view class="section">
	  <label>手机号码</label><p><input size="11" maxlength="11" type="number" placeholder="请输入11位手机号码" name="phone" bindinput="bindInputPhone" /></p>
	</view>
	<view class="section">
	  <label>验证码</label>
	  <p class="yzm_area"><input size="6" maxlength="6" type="number" placeholder="短信验证码" name="smsCode" /></p>
	  <view><button bindtap="getSmsCode" disabled="{{disabled}}" >{{smsCodeValue}}</button></view>
	</view>


	<view class="btn_area">
	  <button formType="submit" disabled="{{submitDisabled}}">提交认证</button>
	</view>
</view>
</form>
