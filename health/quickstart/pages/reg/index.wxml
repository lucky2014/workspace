<view class="banner">
  <image src="../imgs/b1.jpg" style="width:{{viewWidth}}px; height: {{viewHeigh}}px;" bindload="imageLoad" />
</view>

<view class="wrap">
	<picker bindchange="bindPickerChange" value="{{areaIndex}}" range="{{area}}">  
		<view class="picker">  
		  <label>公司名称</label>{{area[areaIndex]}}  
		</view>  
	</picker>  
	<view class="section">
	  <label>工号</label><p><input placeholder="请填写员工工号"  /></p>
	</view>
	<view class="section">
	  <label>手机号码</label><p><input  maxlength="11" placeholder="请输入11位手机号码" /></p>
	</view>
	<view class="section">
	  <label>验证码</label>
	  <p class="yzm_area"><input  maxlength="10" placeholder="短信验证码" /></p>
	  <a>获取验证码</a>
	</view>


	<view class="btn_area" bindtap="goGoals">
	  <button bindtap="setLoading">提交认证</button>
	</view>
</view>
