.container{
	padding:0 15px;
}
.propty{
	padding:15px 0;
	font-size:14px;
	color:#858c96;
}
.inputCon{
	background-color:#ffffff;
	border-radius:4px;
	border:1px solid #f0f0f0;
	padding:5px;
}
.inputCon input{
	height:45px;
	line-height:45px;
	font-size:14px;
	padding:0 3px;
}
.reinput{
	position:relative;
	border-bottom:1px solid #edeef0;
	padding-right:20px;
	box-sizing:border-box;
}
.addView{
	height:50px;
	line-height:50px;
	text-align:center;
	color:#1993e6;
	font-size:14px;
}
.addImg{
	height:13px;
	width:13px;
}
.cha{
	position:absolute;
	height:14px;
	width:14px;
	right:5px;
	top:16px;
}
picker{
	background-color:#ffffff;
	border-radius:4px 0 0 4px;
	border:1px solid #f0f0f0;
	border-right:none;
	padding:15px 5px;
	margin-top:10px;
	font-size:14px;
	color:#1b2027;
	width:70%;
	box-sizing:border-box;
	float:left;
}
.finish{
	position:fixed;
	bottom:30px;
	width:100%;
	background: #FF5900;
	border-radius: 26px;
	height:48px;
	width:200px;
	left:50%;
	margin-left:-100px;
	color:#fff;
	font-size:20px;
}
.remove{
	background-color:#ffffff;
	border-radius:0 4px 4px 0;
	border:1px solid #f0f0f0;
	border-left:none;
	padding:15px 5px;
	margin-top:10px;
	font-size:14px;
	color:#1b2027;
	width:70%;
	width:30%;
	float:right;
	color:#FF5900;
	box-sizing:border-box;
	text-align:right;
}