/**index.wxss**/
.banner{ position:relative;}
.banner img{ position:absolute; left:0; top:0; }
.banner .title{ width:53%; text-align:center; font-size:20px; font-weight:600; color:#148aef; position:absolute; right:0; top:20px;}
.banner text{ width:42%; text-align:justify; font-size:14px; line-height:22px; position:absolute; right:6%; bottom:18px;}

.formTitle{ text-align:center; color:#148aef; height:44px; line-height:44px; display:block; background:#fff;}
.formWrap{ width:100%; display:block; border-top:1px solid #eee; font-size:15px;}
.formWrap .section{ border-bottom:1px solid #eee; height:44px; line-height:44px; background:#fff; position:relative;}
.formWrap .section .section__title{ width:30%;  position:absolute; left:4%; top:0;}
.formWrap .section input{ width:64%;  position:absolute; left:32%; top:0; height:44px; line-height:44px;}

.btn-area{ clear:both; width:92%; background:#148aef; margin:14px auto; border-radius:12px;}
.btn-area button{ color:#fff; font-size:18px;  width:100%; background:#148aef; height:44px; line-height:44px;}